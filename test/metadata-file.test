set -o pipefail

export VLC_PLUGIN_PATH=$(pwd)/../src/.libs

run_test() {
	timeout 60 ./vlcdummy "$1" \
		--print-item \
		--play-item \
		--print-subitems 2>/dev/null |
	grep VLCDUMMY |
	diff -U 10 "$2" - |
	sed -e "s/^/# /" &&
	echo "ok # $1" ||
	echo "not ok # $1"
}

echo 1..4
run_test "data/flags.torrent" "data/flags.torrent.metadata-expected.txt"
run_test "data/nasa1.mp4.torrent" "data/nasa1.mp4.torrent.metadata-expected.txt"
run_test "data/nasa.torrent" "data/nasa.torrent.metadata-expected.txt"
run_test "data/sweden.png.torrent" "data/sweden.png.torrent.metadata-expected.txt"
